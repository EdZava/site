// -- Functions ----------------------------------------------------------------

zeroSpace()
  margin 0
  padding 0

containerSize()
  margin 0 auto
  width 1024px

// -- Reset --------------------------------------------------------------------
a
  text-decoration none

h1,h2,h3,h4,h5,h6,ul,ol,li,p,nav,header,section,article,main,footer,aside,figure
  zeroSpace()

// -- Main Elements ------------------------------------------------------------

body
  zeroSpace()
  font-family 'Lato'
  font-size 16px

.text-small
  font-size .8em

// -- Sections -----------------------------------------------------------------

.section
  padding 1em

.section--gray
  background app_white - 5

.section__content
  margin 0 auto
  width 1024px
