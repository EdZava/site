html
  font-size: 62.5%

body

  .shadow-text                : 0 2px 2px rgba(0,0,0,0.4)

  // -- HEADER -----------------------------------------------------------------

  > header
    z-index                   : 1980
    position                  : fixed
    top                       : 0
    left                      : 0
    right                     : 0
    height                    : HEIGHT = (1.5 * UNIT)
    padding                   : 0 SPACE
    line-height               : HEIGHT
    background-color          : rgba(0,0,0,0.5)
    color                     : WHITE
    transform                   translateY(-100%)
    ANIMATION_DURATION = (2 * ANIMATION_DURATION)
    transition              all ANIMATION_DURATION ANIMATION_EASE
    > *
      display                 : inline-block
      vertical-align          : MIDDLE
      opacity                 : 0
    > strong, > nav
      transition                all ANIMATION_DURATION ANIMATION_DURATION ANIMATION_EASE
    > strong
      margin-right            : (SPACE / 2)
      transform                 translateX(-100%)
    > small
      transform                 translateX(-100%)
      transition                all ANIMATION_DURATION (1.5 * ANIMATION_DURATION) ANIMATION_EASE
    > nav
      float                   : right
      transform                 translateX(100%)
      > *
        color                 : WHITE
        margin-left           : (2.5 * SPACE)
        display               : inline-block
        margin                : 0 0 0 SIZE = (UNIT / 2)
        vertical-align        : middle
        width                 : SIZE
        height                : SIZE
        font-size             : SIZE
        opacity               : 0.45
        transition              opacity ANIMATION_DURATION ANIMATION_EASE
        &:hover
          opacity             : 1
    &.active
      transform                 translateY(0%)
      > *
        opacity               : 1
        transform               translateX(0%)

  // -- CONTENT ----------------------------------------------------------------

  > section

    .row
      margin-bottom: 0

      #newsletter
        > form
          text-align      : center

          > p
            margin-right  : 5px
            display       : inline-block
            margin-bottom : 0

          > .inline.field
            display      : inline-block
            margin-right : 2px
            margin-bottom: 0
            width        : 140px
            color        : DARK
            font-size    : 14px
            padding      : 15px 6px
            transition   : width 300ms ease

            &:hover
              width : 180px

          > [type="submit"]
            display      : inline-block
            margin-bottom: 0
            height       : 33px

      > .post
        margin            : 1.5rem 0
        position          : relative

        > figure
          background-size : cover
          background-position : 0% 0%
          height          : 30rem
          margin          : 0
          transition      : background 200ms cubic-bezier(.645,.045,.355,1)
          filter          : brightness(90%)

          &.hover
            background-position : 50% 100%
            filter              : brightness(100%)

        > figcaption
          position         : absolute;
          left             : 0;
          top              : 0;
          width            : 100%;
          height           : 100%;
          background-color : rgba(0, 0, 0, 0.2)
          color            : #FFF;
          transition       : background 400ms cubic-bezier(.645,.045,.355,1)

          &.hover
            background-color: transparent

          > h1
            width            : 100%
            margin           : 0
            padding          : 3rem 1rem
            font-weight      : 700
            background-color : alpha(WHITE, 95%)
            filter           : brightness(80%)
            color            : #4C4C4C
            font-size        : 1.8rem
            transition       : all .3s

            &.hover
              filter         : brightness(100%)
              background-color: alpha(WHITE, 100%)

    &:not(.landing)
      padding            : (2 * UNIT) 0
      nav > a
        display          : block
        margin           : (SPACE) 0
        opacity          : 0.85
        img
          width          : 100%
          margin-bottom  : 0
        span
          margin-left    : (SPACE / 2)
          padding        : (SPACE / 6) (SPACE / 4) 0 (SPACE / 4)
          font-size      : FONT_SIZE_SMALL
          font-weight    : FONT_WEIGHT_BOLD
          text-transform : uppercase
          vertical-align : middle
          border-radius  : .25rem
          opacity        : 0.9
          &.soon
            background-color: WHITE !important
        small
          display         : block
          font-size       : 75%
          opacity         : 0.5

        &:hover
          opacity: 1

      &.bck.theme nav > a
        span
          background-color: rgba(255,255,255,0.5)
          color: THEME
        &:hover span
          background-color: WHITE
      &.bck.dark nav > a
        span
          background-color: rgba(0,0,0,0.25)
          color: WHITE
        &:hover span
          background-color: THEME
    &.map
      position                  : relative
      padding                   : 0 !important
      background-color          : DARK
      height                    : (14 * UNIT)
      > *
        position                : absolute
        left                      : 0
      > .row
        width                   : 100%
        height                  : 100%
      > iframe
        width: 100%
        height: 100%
        opacity: 0.5

    &.landing
      //background: linear-gradient(150deg, rgba(224, 117, 24, 0.2) 30%, rgba(227, 108, 40, 0.3) 70%), url("/assets/img/cover.jpg")
      background                : url("/assets/img/cover.jpg")
      background-size           : cover !important
      background-opacity        : 0.3
      background-position       : 0 100%

      &.scroll
        figure.glass
          background-color      : rgba(0,0,0,0.5)

      figure.glass
        position                : absolute
        left                    : 0
        top                     : 0
        width                   : 100%
        height                  : 100%
        margin                  : 0 !important
        background-color        : rgba(0,0,0,0.0)
        transition                background (3 * ANIMATION_DURATION) ANIMATION_EASE
      .row
        margin-bottom: 0
        > *
          z-index               : 1980
          transition              all (1 * ANIMATION_DURATION) ANIMATION_EASE
        > img
          border-radius         : 50%
          max-width             : UNIT * 4
          border                : 3px solid #F8F8F8
          margin-bottom         : SPACE * 1.8
        > h1
          color                 : #F8F8F8
          border                : 3px solid #F8F8F8
          padding               : .2em .5em
          font-size             : 3.9rem
          font-weight           : FONT_WEIGHT_BOLD
          text-shadow           : 0 2px 2px rgba(000,000,000,.4)
          text-transform        : uppercase

          > span
            opacity: 0.5
        > p
          padding               : 0 31.5%
          line-height           : 1.7em
          margin-bottom         : 0
        > nav
          margin-top            : 10px

          > a
            margin                : 0 (SPACE / 1.25)
            width                 : SIZE = (UNIT / 1.5)
            height                : SIZE
            font-size             : SIZE
            opacity               : 1
            transition              opacity ANIMATION_DURATION ANIMATION_EASE
            &:hover
              opacity             : 0.5
        > .more
          position              : absolute
          bottom                : SPACE
          left                  : 0
          right                 : 0
          font-weight           : FONT_WEIGHT_NORMAL
          opacity               : 0.6
          transition              all (2 * ANIMATION_DURATION) ANIMATION_EASE
          &.hide
            opacity             : 0
        &.hide
          *
            opacity             : 0
            transform             scale(0.9)


  // -- FOOTER -----------------------------------------------------------------

  > footer
    position        : relative
    height          : HEIGHT = (1.5 * UNIT)
    line-height     : HEIGHT
    margin-top      : -(HEIGHT)
    background-color: rgba(0,0,0,0.25)
    opacity         : 0.25
